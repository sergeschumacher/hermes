<%- include('layouts/main', { title: 'Live TV', body: `
<!-- Mini Hero -->
<section class="mini-hero" id="mini-hero">
    <div class="mini-hero-bg" style="background-image: url('/static/images/livetv-hero.jpg');"></div>
    <div class="mini-hero-gradient"></div>
    <div class="mini-hero-content">
        <h1 class="text-4xl font-bold mb-2">Live TV</h1>
        <p class="text-text-muted" id="page-subtitle">Select a category to browse channels</p>
    </div>
</section>

<div class="content-container">
    <!-- Filter Bar -->
    <div class="filter-bar">
        <div class="filter-bar-inner">
            <!-- Search -->
            <div class="filter-search">
                <svg class="filter-search-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <input type="text" id="search-input" placeholder="Search channels or categories..." class="filter-search-input" />
            </div>

            <!-- Country Filter -->
            <select id="country-filter" class="filter-select" style="min-width: 160px;">
                <option value="">All Countries</option>
            </select>

            <!-- Count -->
            <div class="filter-actions">
                <span class="result-count">
                    <span id="results-count">0</span> <span id="results-label">categories</span>
                </span>
            </div>
        </div>
    </div>

    <div class="livetv-layout">
        <!-- Categories Column -->
        <aside class="livetv-column livetv-column-categories">
            <div class="livetv-column-header">
                <h2>Categories</h2>
                <span id="categories-count" class="livetv-column-count">0</span>
            </div>
            <div id="categories-view" class="livetv-category-list"></div>
        </aside>

        <!-- Channels Column -->
        <section class="livetv-column livetv-column-channels">
            <div class="livetv-column-header">
                <h2 id="channels-title">Channels</h2>
                <span id="channels-count" class="livetv-column-count">0</span>
            </div>
            <div id="channels-view" class="livetv-channels-list">
                <div class="livetv-placeholder" id="channels-placeholder">Select a category to view channels.</div>
                <div class="empty-state hidden" id="empty-state">
                    <div class="empty-state-icon">
                        <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.125-3h17.25c.621 0 1.125-.504 1.125-1.125V4.875c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125z" />
                        </svg>
                    </div>
                    <p class="empty-state-title">No channels found</p>
                    <p class="empty-state-text">Try a different search term</p>
                </div>
            </div>
            <div class="livetv-load-more">
                <button id="load-more" class="btn-hero-secondary hidden">Load More Channels</button>
            </div>
        </section>

        <!-- EPG Column -->
        <aside class="livetv-column livetv-column-epg">
            <div class="livetv-column-header">
                <h2>EPG</h2>
                <span id="epg-channel-name" class="livetv-column-count">No channel selected</span>
            </div>
            <div id="epg-view" class="livetv-epg-view">
                <div class="livetv-placeholder" id="epg-placeholder">Select a channel to see program info.</div>
            </div>
        </aside>
    </div>
</div>

<!-- Context Menu -->
<div id="context-menu" class="fixed bg-dark-card border border-dark-border rounded-lg shadow-2xl py-2 z-50 hidden min-w-[180px]">
    <button id="ctx-play" class="w-full px-4 py-2.5 text-left text-white flex items-center gap-3 hover:bg-dark-surface transition-colors">
        <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
        </svg>
        Play in VLC
    </button>
    <button id="ctx-record" class="w-full px-4 py-2.5 text-left text-white flex items-center gap-3 hover:bg-dark-surface transition-colors">
        <svg class="w-4 h-4 text-danger-500" fill="currentColor" viewBox="0 0 20 20">
            <circle cx="10" cy="10" r="6"/>
        </svg>
        Record...
    </button>
    <div class="border-t border-dark-border my-1"></div>
    <button id="ctx-copy" class="w-full px-4 py-2.5 text-left text-white flex items-center gap-3 hover:bg-dark-surface transition-colors">
        <svg class="w-4 h-4 text-text-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        Copy Stream URL
    </button>
</div>

<!-- Recording Modal -->
<div id="record-modal" class="modal-overlay hidden">
    <div class="modal-content max-w-md p-6">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-white">Schedule Recording</h3>
            <button onclick="closeRecordModal()" class="text-text-muted hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Channel Info -->
        <div class="flex items-center gap-4 mb-6 p-4 rounded-lg bg-dark-surface">
            <img id="record-channel-logo" src="/static/img/no-logo.svg" class="w-12 h-12 rounded-lg object-contain bg-dark-border" onerror="this.src='/static/img/no-logo.svg'" />
            <div class="flex-1 min-w-0">
                <h4 id="record-channel-name" class="text-white font-medium truncate"></h4>
                <p id="record-channel-category" class="text-text-muted text-sm truncate"></p>
            </div>
        </div>

        <!-- Duration Selection -->
        <div class="mb-6">
            <label class="block text-text-secondary text-sm font-medium mb-3">Recording Duration</label>
            <div class="grid grid-cols-4 gap-2 mb-4">
                <button type="button" class="duration-btn btn btn-secondary py-2 text-sm" data-minutes="30">30 min</button>
                <button type="button" class="duration-btn btn btn-secondary py-2 text-sm" data-minutes="60">1 hour</button>
                <button type="button" class="duration-btn btn btn-secondary py-2 text-sm" data-minutes="90">1.5 hr</button>
                <button type="button" class="duration-btn btn btn-secondary py-2 text-sm" data-minutes="120">2 hours</button>
            </div>
            <div class="flex items-center gap-4">
                <div class="flex-1">
                    <label class="block text-text-muted text-xs mb-1">Or set end time</label>
                    <input type="time" id="record-end-time" class="input w-full" />
                </div>
                <div class="flex-1">
                    <label class="block text-text-muted text-xs mb-1">Calculated end</label>
                    <p id="record-end-display" class="text-white font-medium py-2">--:--</p>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="flex gap-3">
            <button onclick="closeRecordModal()" class="btn btn-secondary flex-1">Cancel</button>
            <button onclick="startRecording()" class="btn btn-danger flex-1">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <circle cx="10" cy="10" r="6"/>
                </svg>
                Start Recording
            </button>
        </div>
    </div>
</div>

<script src="/static/js/livetv.js" defer></script>

<style>
    .livetv-layout {
        display: grid;
        grid-template-columns: 260px minmax(0, 1fr) 340px;
        grid-template-areas: "cats chans epg";
        gap: 1.5rem;
        align-items: start;
    }

    .livetv-column-categories {
        grid-area: cats;
    }

    .livetv-column-channels {
        grid-area: chans;
    }

    .livetv-column-epg {
        grid-area: epg;
    }

    .livetv-column {
        background: #121212;
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        min-height: 520px;
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.35);
    }

    .livetv-column-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        margin-bottom: 0.75rem;
    }

    .livetv-column-header h2 {
        font-size: 1rem;
        font-weight: 700;
        color: #ffffff;
        margin: 0;
    }

    .livetv-column-count {
        font-size: 0.75rem;
        color: #b0b0b0;
        background: rgba(255, 255, 255, 0.08);
        padding: 0.25rem 0.6rem;
        border-radius: 999px;
        white-space: nowrap;
    }

    .livetv-category-list,
    .livetv-channels-list,
    .livetv-epg-view {
        flex: 1;
        overflow-y: auto;
        padding-right: 0.25rem;
    }

    .livetv-category-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .livetv-category-item {
        position: relative;
        border: 1px solid rgba(255, 255, 255, 0.08);
        background: #1a1a1a;
        border-radius: 12px;
        padding: 0.75rem 0.75rem 0.75rem 0.9rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        min-height: 72px;
        color: #ffffff;
        text-align: left;
        transition: border 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
        overflow: hidden;
        cursor: pointer;
    }

    .livetv-category-item:hover {
        border-color: rgba(229, 9, 20, 0.5);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
    }

    .livetv-category-item.active {
        border-color: rgba(229, 9, 20, 0.9);
        box-shadow: 0 0 0 1px rgba(229, 9, 20, 0.3);
    }

    .livetv-category-flag {
        font-size: 1.5rem;
        line-height: 1;
        flex-shrink: 0;
    }

    .livetv-category-label {
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
        z-index: 1;
    }

    .livetv-category-name {
        font-size: 0.9rem;
        font-weight: 600;
        color: #ffffff;
    }

    .livetv-category-meta {
        font-size: 0.7rem;
        color: #9a9a9a;
    }

    .livetv-category-accent {
        position: absolute;
        inset: 0;
        opacity: 0.2;
    }

    .livetv-channels-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .livetv-channel-row {
        display: grid;
        grid-template-columns: 56px minmax(0, 1fr) auto;
        gap: 0.75rem;
        align-items: center;
        padding: 0.6rem 0.75rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        background: #151515;
        min-height: 72px;
        cursor: pointer;
        transition: border 0.2s ease, background 0.2s ease, transform 0.2s ease;
    }

    .livetv-channel-row:hover {
        border-color: rgba(229, 9, 20, 0.4);
        background: #1b1b1b;
        transform: translateY(-1px);
    }

    .livetv-channel-row.active {
        border-color: rgba(229, 9, 20, 0.8);
        background: rgba(229, 9, 20, 0.12);
    }

    .livetv-channel-logo {
        width: 56px;
        height: 40px;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .livetv-channel-logo img {
        max-width: 48px;
        max-height: 32px;
        object-fit: contain;
    }

    .livetv-channel-meta {
        min-width: 0;
    }

    .livetv-channel-name {
        font-size: 0.95rem;
        font-weight: 600;
        color: #ffffff;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 0.3rem;
    }

    .livetv-channel-epg {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.75rem;
    }

    .livetv-now-label {
        color: #E50914;
        font-weight: 600;
    }

    .livetv-now-title {
        color: #a0a0a0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .livetv-epg-progress {
        margin-top: 0.35rem;
        height: 3px;
        background: rgba(255, 255, 255, 0.08);
        border-radius: 2px;
        overflow: hidden;
    }

    .livetv-epg-progress-bar {
        height: 100%;
        background: linear-gradient(90deg, #E50914 0%, #ff6b6b 100%);
        border-radius: 2px;
        transition: width 0.5s ease;
    }

    .livetv-channel-actions {
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }

    .livetv-row-action {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        background: rgba(255, 255, 255, 0.08);
        color: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }

    .livetv-row-action:hover {
        background: rgba(229, 9, 20, 0.15);
        border-color: rgba(229, 9, 20, 0.5);
    }

    .livetv-row-action svg {
        width: 16px;
        height: 16px;
    }

    .livetv-epg-view {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .livetv-epg-block {
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 0.75rem;
    }

    .livetv-epg-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #E50914;
        font-weight: 700;
        margin-bottom: 0.4rem;
    }

    .livetv-epg-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 0.35rem;
    }

    .livetv-epg-time {
        font-size: 0.75rem;
        color: #b0b0b0;
        margin-bottom: 0.5rem;
    }

    .livetv-epg-desc {
        font-size: 0.8rem;
        color: #9a9a9a;
        line-height: 1.4;
    }

    .livetv-epg-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .livetv-epg-item {
        padding: 0.5rem;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.05);
    }

    .livetv-epg-item-time {
        font-size: 0.7rem;
        color: #a0a0a0;
        margin-bottom: 0.2rem;
    }

    .livetv-epg-item-title {
        font-size: 0.82rem;
        color: #ffffff;
        font-weight: 500;
    }

    .livetv-placeholder,
    .livetv-empty,
    .livetv-epg-loading,
    .livetv-epg-empty {
        color: #8a8a8a;
        font-size: 0.85rem;
        text-align: center;
        padding: 1.25rem 0.5rem;
    }

    .livetv-load-more {
        display: flex;
        justify-content: center;
        margin-top: 0.75rem;
    }

    @media (max-width: 1280px) {
        .livetv-layout {
            grid-template-columns: 220px minmax(0, 1fr) 300px;
        }
    }

    @media (max-width: 1024px) {
        .livetv-layout {
            grid-template-columns: 1fr;
            grid-template-areas:
                "cats"
                "chans"
                "epg";
        }

        .livetv-column {
            min-height: unset;
        }
    }
</style>
` }) %>
