    // Initialize when DOM is ready (ensures app.js has loaded and socket is available)
    document.addEventListener('DOMContentLoaded', () => {
        // Real-time updates - use targeted DOM updates for performance
        socket.on('download:progress', (data) => {
            const download = downloads.find(d => d.id === data.id);
            if (download) {
                download.progress = parseFloat(data.progress);
                download.downloaded_size = data.downloaded;
                download.file_size = data.total;
                download.speed_bps = data.speedBps || 0;

                // Use data attributes for reliable element selection
                const progressBar = document.querySelector(\`[data-progress-bar="\${data.id}"]\`);
                const progressText = document.querySelector(\`[data-progress-text="\${data.id}"]\`);
                const sizeText = document.querySelector(\`[data-size-text="\${data.id}"]\`);
                const speedText = document.querySelector(\`[data-speed-text="\${data.id}"]\`);

                if (progressBar || progressText) {
                    // Update progress bar
                    if (progressBar) {
                        progressBar.style.width = \`\${download.progress}%\`;
                    }
                    // Update progress text
                    if (progressText) {
                        progressText.textContent = \`\${download.progress.toFixed(1)}%\`;
                    }
                    // Update size text
                    if (sizeText && download.file_size) {
                        sizeText.textContent = \`\${formatBytes(download.downloaded_size || 0)} / \${formatBytes(download.file_size || 0)}\`;
                    }
                    // Update speed text
                    if (speedText) {
                        speedText.textContent = download.speed_bps > 0 ? \`Speed: \${formatBytes(download.speed_bps)} / s\` : '';
                    }
                } else {
                    // Fallback to full render if elements not found (new download)
                    renderDownloads();
                }
            }
        });

        socket.on('download:start', () => loadDownloads());
        socket.on('download:complete', () => loadDownloads());
        socket.on('download:failed', () => loadDownloads());
        socket.on('download:queued', () => loadDownloads());
        socket.on('download:cancelled', () => loadDownloads());
        socket.on('download:removed', () => loadDownloads());
        socket.on('download:priority', () => loadDownloads());
        socket.on('download:paused', (data) => {
            if (window.showToast) showToast(data.reason || 'Download paused while previewing', 'info');
            loadDownloads();
        });
        socket.on('download:resumed', (data) => {
            if (window.showToast) showToast('Download resumed', 'success');
            loadDownloads();
        });

        // Transcode events
        socket.on('transcode:queued', () => loadTranscodeQueue());
