<script>
    let downloads = [];
    let transcodeJobs = [];
    const speedHistory = [];
    const speedHistoryLimit = 60;

    function formatBytes(bytes, decimals = 1) {
        if (!bytes || bytes === 0) return '0 B';
        const k = 1024;
        const sizes = ['B', 'KB', 'MB', 'GB', 'TB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(decimals)) + ' ' + sizes[i];
    }

    function formatSpeed(bytesPerSecond) {
        return formatBytes(bytesPerSecond) + '/s';
    }

    function updateSpeedHistory(activeItems) {
        const totalSpeed = activeItems.reduce((sum, item) => sum + (item.speed_bps || 0), 0);
        speedHistory.push(totalSpeed);
        if (speedHistory.length > speedHistoryLimit) speedHistory.shift();
        renderSpeedChart();
    }

    function renderSpeedChart() {
        const path = document.getElementById('download-speed-path');
        const fill = document.getElementById('download-speed-fill');
        const empty = document.getElementById('download-speed-empty');
        const currentEl = document.getElementById('download-speed-current');
        const peakEl = document.getElementById('download-speed-peak');
        if (!path || !fill || !empty || !currentEl || !peakEl) return;

        const current = speedHistory.length ? speedHistory[speedHistory.length - 1] : 0;
        const peak = speedHistory.length ? Math.max(...speedHistory) : 0;
        currentEl.textContent = formatSpeed(current);
        peakEl.textContent = formatSpeed(peak);

        if (speedHistory.length < 2 || peak === 0) {
            path.setAttribute('d', '');
            fill.setAttribute('d', '');
            empty.classList.remove('hidden');
            return;
        }

        empty.classList.add('hidden');
        const width = 100;
        const height = 40;
        const max = peak || 1;
        const step = width / (speedHistory.length - 1);

        let d = '';
        speedHistory.forEach((value, index) => {
            const x = index * step;
            const y = height - (value / max) * (height - 4) - 2;
            d += (index === 0 ? 'M' : 'L') + x.toFixed(2) + ' ' + y.toFixed(2) + ' ';
        });

        const fillPath = d + 'L ' + width + ' ' + height + ' L 0 ' + height + ' Z';
        path.setAttribute('d', d.trim());
        fill.setAttribute('d', fillPath.trim());
    }

    function getDisplayTitle(d) {
        if (d.episode_title) {
            return \`\${d.title} - S\${String(d.ep_season).padStart(2, '0')}E\${String(d.ep_episode).padStart(2, '0')}\`;
        }
        return d.title || 'Unknown';
    }

    function getPriorityLabel(priority) {
        if (priority >= 90) return { text: 'Highest', class: 'text-danger-400' };
        if (priority >= 70) return { text: 'High', class: 'text-warning-400' };
        if (priority >= 30) return { text: 'Normal', class: 'text-gray-400' };
        return { text: 'Low', class: 'text-gray-500' };
    }

    async function loadDownloads() {
        try {
            const response = await fetch('/api/downloads');
            downloads = await response.json();
            renderDownloads();
        } catch (err) {
            console.error('Failed to load downloads:', err);
        }
    }

    async function loadTranscodeQueue() {
        try {
            const response = await fetch('/api/transcoder/queue');
            transcodeJobs = await response.json();
            renderTranscodeQueue();
        } catch (err) {
            console.error('Failed to load transcode queue:', err);
        }
    }

    function renderTranscodeQueue() {
        const container = document.getElementById('transcoding-queue');
        const activeJobs = transcodeJobs.filter(j => j.status === 'transcoding' || j.status === 'pending');
        const completedJobs = transcodeJobs.filter(j => j.status === 'completed' || j.status === 'skipped');
        const failedJobs = transcodeJobs.filter(j => j.status === 'failed');

        // Update stats
        document.getElementById('stat-transcoding').textContent = activeJobs.length;
        document.getElementById('transcoding-count').textContent = transcodeJobs.length;

        // Show/hide section based on whether there are any jobs
        const section = document.getElementById('transcoding-section');
        if (transcodeJobs.length === 0) {
            container.innerHTML = \`
                <div class="empty-state py-12">
                    <div class="empty-state-icon">
                        <svg class="w-8 h-8 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 4V2M17 4V2M7 20v2M17 20v2M4 7H2M4 17H2M20 7h2M20 17h2M7 11h10M7 15h6" />
                        </svg>
                    </div>
                    <p class="empty-state-title">No transcoding jobs</p>
                    <p class="empty-state-text">Videos will be transcoded after download or from the watch folder</p>
                </div>
            \`;
            return;
        }

        let html = '';

        // Active/pending jobs first
        activeJobs.forEach(job => {
            const isActive = job.status === 'transcoding';
            html += \`
                <div class="p-5 hover:bg-gray-800/30 transition-colors" data-id="\${job.id}">
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 rounded-lg \${isActive ? 'bg-purple-500/20' : 'bg-gray-700'} flex items-center justify-center flex-shrink-0">
                            \${isActive ? \`
                                <svg class="w-6 h-6 text-purple-400 animate-spin" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                            \` : \`
                                <svg class="w-6 h-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            \`}
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-start justify-between gap-4">
                                <div>
                                    <h3 class="font-semibold text-white truncate">\${job.filename}</h3>
                                    <div class="flex items-center gap-2 mt-1">
                                        <span class="text-sm text-gray-400">\${job.media_type || 'Video'}</span>
                                        <span class="text-sm \${job.source === 'watch' ? 'text-purple-400' : 'text-primary-400'}">\${job.source === 'watch' ? 'Watch folder' : 'Download'}</span>
                                    </div>
                                </div>
                                \${isActive ? \`
                                    <button onclick="cancelTranscode(\${job.id})" class="btn btn-danger btn-sm flex-shrink-0">
                                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                        Cancel
                                    </button>
                                \` : ''}
                            </div>
                            \${isActive ? \`
                                <div class="mt-4">
                                    <div class="flex items-center justify-between text-sm mb-2">
                                        <span class="text-gray-400">\${job.status === 'transcoding' ? 'Transcoding...' : 'Waiting...'}</span>
                                        <span class="text-purple-400 font-medium">\${job.progress || 0}%</span>
                                    </div>
                                    <div class="progress-bar">
                                        <div class="progress-bar-fill bg-purple-500" style="width: \${job.progress || 0}%"></div>
                                    </div>
                                </div>
                            \` : \`
                                <p class="text-sm text-gray-500 mt-2">Waiting in queue...</p>
                            \`}
                        </div>
                    </div>
                </div>
            \`;
        });

        // Failed jobs
        failedJobs.forEach(job => {
            html += \`
