<!-- HLS.js for playing HLS streams in browsers that don't support it natively -->
<script src="https://cdn.jsdelivr.net/npm/hls.js@1.5.7/dist/hls.min.js"></script>

<script>
    // Preview state
    let currentPreviewUrl = null;
    let currentHls = null;

    window.openPreview = function(streamUrl, title, quality, language) {
        if (!streamUrl) {
            showToast('No stream URL available', 'error');
            return;
        }

        currentPreviewUrl = streamUrl;

        // Update modal info
        document.getElementById('preview-title').textContent = title || 'Preview';
        document.getElementById('preview-quality').textContent = quality || '';
        document.getElementById('preview-language').textContent = language || '';

        // Show loading state
        document.getElementById('preview-loading').classList.remove('hidden');
        document.getElementById('preview-error').classList.add('hidden');

        // Get video element and fully reset it
        const video = document.getElementById('preview-video');

        // Cleanup previous HLS instance
        if (currentHls) {
            currentHls.destroy();
            currentHls = null;
        }

        // Remove old event handlers
        video.oncanplay = null;
        video.onerror = null;
        video.onloadeddata = null;

        // Stop and reset video
        video.pause();
        video.removeAttribute('src');
        video.innerHTML = '';
        video.load();

        // Build proxy URL with cache buster
        const proxyUrl = '/api/stream/proxy?url=' + encodeURIComponent(streamUrl) + '&t=' + Date.now();

        // Check if stream is HLS
        const isHls = streamUrl.includes('.m3u8');

        const onVideoReady = () => {
            document.getElementById('preview-loading').classList.add('hidden');
            video.play().catch(e => console.log('Autoplay prevented:', e));
        };

        const onVideoError = (errorMsg) => {
            console.error('Video error:', errorMsg);
            document.getElementById('preview-loading').classList.add('hidden');
            document.getElementById('preview-error').classList.remove('hidden');
            document.getElementById('preview-error-msg').textContent = errorMsg || 'Stream may be unavailable or incompatible';
        };

        if (isHls) {
            // Use HLS.js for HLS streams (most browsers don't support HLS natively)
            if (typeof Hls !== 'undefined' && Hls.isSupported()) {
                currentHls = new Hls({
                    enableWorker: true,
                    lowLatencyMode: true,
                    backBufferLength: 30
                });

                currentHls.loadSource(proxyUrl);
                currentHls.attachMedia(video);

                currentHls.on(Hls.Events.MANIFEST_PARSED, () => {
                    onVideoReady();
                });

                currentHls.on(Hls.Events.ERROR, (event, data) => {
                    if (data.fatal) {
                        switch (data.type) {
                            case Hls.ErrorTypes.NETWORK_ERROR:
                                onVideoError('Network error - stream may be unavailable');
                                break;
                            case Hls.ErrorTypes.MEDIA_ERROR:
                                // Try to recover
                                currentHls.recoverMediaError();
                                break;
                            default:
                                onVideoError('Stream error: ' + data.details);
                                break;
                        }
                    }
                });
            } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
                // Safari has native HLS support
                video.src = proxyUrl;
                video.onloadeddata = onVideoReady;
                video.onerror = () => onVideoError('Stream may be unavailable');
                video.load();
            } else {
                onVideoError('Your browser does not support HLS playback');
            }
        } else {
            // Non-HLS streams - use transcoded MP4 from proxy
            const source = document.createElement('source');
            source.src = proxyUrl;
            source.type = 'video/mp4';
            video.appendChild(source);

            video.onloadeddata = onVideoReady;
            video.onerror = () => onVideoError('Stream may be unavailable or incompatible');
            video.load();
        }

        // Show modal
        document.getElementById('preview-modal').classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    window.closePreview = function() {
        const video = document.getElementById('preview-video');

        // Cleanup HLS instance
        if (currentHls) {
            currentHls.destroy();
            currentHls = null;
        }

        // Remove event handlers
        video.oncanplay = null;
        video.onerror = null;
        video.onloadeddata = null;

        // Stop playback
        video.pause();
        video.removeAttribute('src');
        video.innerHTML = '';
        video.load();

        document.getElementById('preview-modal').classList.add('hidden');
        document.body.style.overflow = '';
        currentPreviewUrl = null;
    }

    window.playPreviewInVLC = function() {
        if (!currentPreviewUrl) {
            showToast('No stream URL available', 'error');
            return;
        }

        fetch('/api/play', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ url: currentPreviewUrl })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showToast('Opening in VLC...', 'success');
            } else {
                showToast('Failed to open VLC: ' + (data.error || 'Unknown error'), 'error');
            }
        })
        .catch(err => {
            console.error('VLC error:', err);
            showToast('Failed to open VLC', 'error');
        });
    }

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !document.getElementById('preview-modal').classList.contains('hidden')) {
            closePreview();
        }
    });
</script>
