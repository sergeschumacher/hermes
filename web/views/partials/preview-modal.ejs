<!-- Preview Modal -->
<div id="preview-modal" class="preview-modal hidden">
    <div class="preview-overlay" onclick="closePreview()"></div>
    <div class="preview-container">
        <!-- Close Button -->
        <button class="preview-close" onclick="closePreview()" title="Close (Esc)">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>

        <!-- Media Info Header -->
        <div class="preview-header">
            <h3 id="preview-title" class="preview-title">Loading...</h3>
            <div class="preview-badges">
                <span id="preview-quality" class="preview-badge quality"></span>
                <span id="preview-language" class="preview-badge language"></span>
            </div>
        </div>

        <!-- Video Player -->
        <div class="preview-player">
            <video id="preview-video" controls autoplay>
                Your browser does not support the video tag.
            </video>
            <div id="preview-loading" class="preview-loading">
                <div class="preview-spinner"></div>
                <p>Loading preview...</p>
            </div>
            <div id="preview-error" class="preview-error hidden">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
                </svg>
                <p>Unable to load preview</p>
                <span id="preview-error-msg"></span>
            </div>
        </div>

        <!-- Control Bar -->
        <div class="preview-controls">
            <button id="preview-vlc-btn" class="preview-btn vlc" onclick="playPreviewInVLC()">
                <svg fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 14.5v-9l6 4.5-6 4.5z"/>
                </svg>
                Open in VLC
            </button>
            <button class="preview-btn close" onclick="closePreview()">
                Close Preview
            </button>
        </div>
    </div>
</div>

