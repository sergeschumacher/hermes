<%# Hero Carousel Component %>
<%# Usage: <%- include('partials/hero-carousel', { featured: featuredItems }) %> %>

<% if (typeof featured !== 'undefined' && featured && featured.length > 0) { %>
<div class="hero-carousel" id="hero-carousel">
    <!-- Hero Slides -->
    <% featured.forEach((item, index) => { %>
    <div class="hero-slide <%= index === 0 ? 'active' : '' %>"
         data-index="<%= index %>"
         style="background-image: url('<%= item.backdrop_url ? '/api/proxy/image?url=' + encodeURIComponent(item.backdrop_url) : '/static/images/no-backdrop.png' %>');">
        <!-- Gradient overlays -->
        <div class="hero-gradient"></div>
        <div class="hero-gradient-top"></div>

        <!-- Content -->
        <div class="hero-content">
            <h1 class="hero-title"><%= item.title %></h1>

            <div class="hero-meta">
                <% if (item.rating) { %>
                <span class="hero-rating">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <%= item.rating.toFixed(1) %>
                </span>
                <% } %>
                <% if (item.year) { %>
                <span class="hero-meta-item"><%= item.year %></span>
                <% } %>
                <% if (item.genres) { %>
                <span class="hero-meta-item"><%= Array.isArray(item.genres) ? item.genres.slice(0, 2).join(', ') : item.genres %></span>
                <% } %>
                <% if (item.runtime) { %>
                <span class="hero-meta-item"><%= Math.floor(item.runtime / 60) %>h <%= item.runtime % 60 %>m</span>
                <% } %>
            </div>

            <% if (item.overview) { %>
            <p class="hero-description"><%= item.overview %></p>
            <% } %>

            <div class="hero-actions">
                <% if (item.trailer_url) { %>
                <button class="btn-hero-primary" onclick="playTrailer('<%= item.trailer_url %>')">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
                    </svg>
                    Play Trailer
                </button>
                <% } %>
                <a href="/<%= item.media_type === 'movie' ? 'movies' : 'series' %>/<%= item.id %>" class="btn-hero-secondary">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    More Info
                </a>
            </div>
        </div>
    </div>
    <% }); %>

    <!-- Indicators -->
    <% if (featured.length > 1) { %>
    <div class="hero-indicators">
        <% featured.forEach((item, index) => { %>
        <button class="hero-dot <%= index === 0 ? 'active' : '' %>"
                data-index="<%= index %>"
                onclick="goToSlide(<%= index %>)"
                aria-label="Go to slide <%= index + 1 %>"></button>
        <% }); %>
    </div>
    <% } %>
</div>

<script>
(function() {
    const carousel = document.getElementById('hero-carousel');
    if (!carousel) return;

    const slides = carousel.querySelectorAll('.hero-slide');
    const dots = carousel.querySelectorAll('.hero-dot');
    let currentIndex = 0;
    let autoplayInterval;

    window.goToSlide = function(index) {
        // Update slides
        slides.forEach((slide, i) => {
            slide.classList.toggle('active', i === index);
        });

        // Update dots
        dots.forEach((dot, i) => {
            dot.classList.toggle('active', i === index);
        });

        currentIndex = index;
        resetAutoplay();
    };

    function nextSlide() {
        const next = (currentIndex + 1) % slides.length;
        goToSlide(next);
    }

    function startAutoplay() {
        autoplayInterval = setInterval(nextSlide, 8000);
    }

    function resetAutoplay() {
        clearInterval(autoplayInterval);
        startAutoplay();
    }

    // Start autoplay
    if (slides.length > 1) {
        startAutoplay();
    }

    // Pause on hover
    carousel.addEventListener('mouseenter', () => clearInterval(autoplayInterval));
    carousel.addEventListener('mouseleave', startAutoplay);
})();

window.playTrailer = function(url) {
    // Create modal for trailer
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black/90 z-modal flex items-center justify-center p-4';
    modal.innerHTML = `
        <div class="relative w-full max-w-5xl aspect-video bg-dark-card rounded-xl overflow-hidden">
            <button onclick="this.closest('.fixed').remove()"
                    class="absolute top-4 right-4 z-10 w-10 h-10 rounded-full bg-black/50 text-white flex items-center justify-center hover:bg-black/70">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
            <iframe src="${url.replace('watch?v=', 'embed/')}?autoplay=1"
                    class="w-full h-full"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
        </div>
    `;
    modal.addEventListener('click', (e) => {
        if (e.target === modal) modal.remove();
    });
    document.body.appendChild(modal);
};
</script>
<% } else { %>
<!-- Fallback when no featured content -->
<div class="h-64 bg-dark-card flex items-center justify-center">
    <p class="text-text-muted">No featured content available</p>
</div>
<% } %>
