<%# Content Row Component (Netflix-style horizontal scroll) %>
<%# Usage: <%- include('partials/content-row', { title: 'Title', items: items, link: '/movies', linkText: 'See All' }) %> %>

<% if (typeof items !== 'undefined' && items && items.length > 0) { %>
<section class="content-row">
    <div class="row-header">
        <h2 class="row-title"><%= title || 'Content' %></h2>
        <% if (typeof link !== 'undefined' && link) { %>
        <a href="<%= link %>" class="row-link">
            <%= linkText || 'See All' %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
        <% } %>
    </div>

    <div class="row-slider group">
        <!-- Left Arrow -->
        <button class="slider-arrow left" onclick="scrollRow(this, -1)" aria-label="Scroll left">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
            </svg>
        </button>

        <!-- Track -->
        <div class="slider-track">
            <% items.forEach(item => { %>
            <a href="/<%= item.media_type === 'movie' ? 'movies' : 'series' %>/<%= item.id %>"
               class="content-card <%= typeof cardClass !== 'undefined' ? cardClass : '' %>">
                <div class="card-poster">
                    <img src="<%= item.poster_url ? '/api/proxy/image?url=' + encodeURIComponent(item.poster_url) : '/static/images/no-poster.png' %>"
                         alt="<%= item.title %>"
                         loading="lazy"
                         onerror="this.src='/static/images/no-poster.png'">

                    <!-- Quality Badge -->
                    <% if (item.quality) { %>
                    <span class="quality-badge"><%= item.quality %></span>
                    <% } %>

                    <!-- Hover Overlay -->
                    <div class="card-overlay">
                        <div class="play-btn">
                            <svg class="w-5 h-5 ml-0.5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="card-info">
                    <h3 class="card-title"><%= item.title %></h3>
                    <p class="card-meta">
                        <%= item.year || '' %>
                        <% if (item.rating) { %>
                        <span class="flex items-center gap-0.5">
                            <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <%= item.rating.toFixed ? item.rating.toFixed(1) : item.rating %>
                        </span>
                        <% } %>
                    </p>
                </div>
            </a>
            <% }); %>
        </div>

        <!-- Right Arrow -->
        <button class="slider-arrow right" onclick="scrollRow(this, 1)" aria-label="Scroll right">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
            </svg>
        </button>
    </div>
</section>
<% } %>

<% if (typeof _rowScriptLoaded === 'undefined') { %>
<script>
window._rowScriptLoaded = true;
window.scrollRow = function(btn, direction) {
    const track = btn.parentElement.querySelector('.slider-track');
    const cardWidth = track.querySelector('.content-card')?.offsetWidth || 200;
    const scrollAmount = cardWidth * 4 * direction;
    track.scrollBy({ left: scrollAmount, behavior: 'smooth' });
};
</script>
<% } %>
